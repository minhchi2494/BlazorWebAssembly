@page "/todoList"

<h3>ToDoList</h3>

@if (Tasks == null)
{
    <div>Loading</div>
}else
{
    <table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Priority</th>
            <th>Assignee</th>
            <th>Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Tasks)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Priotiry</td>
                <td>@item.AssigneeName</td>
                <td>@item.CreatedDate.ToString("dd/MM/yyyy hh:mm")</td>
                <td>@item.Status</td>
            </tr>
        }
    </tbody>
</table>
}


